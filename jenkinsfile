pipeline {
    environment {
        registry = "totoy/hello-world-deployment"
        registryCredential = 'dockerhub1' 
        dockerImage = ''
    }
    
    agent any
    stages {
        stage('Clean') {
            steps {
                sh 'mvn clean'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
            }
            
        }
        stage('Package') { 
            steps {
                sh 'mvn package' 
            }
        }
        stage('Building image'){
            steps {
                script {
                    dockerImage = docker.build registry + ":$BUILD_NUMBER"
                }
            }
        }
        stage('Deploy Image') {
            steps {
                script {
                    docker.withRegistry( '', registryCredential ) {
                        dockerImage.push()
                    }
                }
            }
        }
    }
}
